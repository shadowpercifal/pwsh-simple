$B64='paste base64 here'; $KEY='your passphrase'; $data=[Convert]::FromBase64String($B64); $salt=$data[0..15]; $iv=$data[16..31]; $ct=[byte[]]$data[32..($data.Length-1)]; $kdf=New-Object Security.Cryptography.Rfc2898DeriveBytes($KEY,[byte[]]$salt,100000); $aes=[Security.Cryptography.Aes]::Create(); $aes.Key=$kdf.GetBytes(32); $aes.IV=$iv; $pt=$aes.CreateDecryptor().TransformFinalBlock($ct,0,$ct.Length); [Text.Encoding]::UTF8.GetString($pt)
